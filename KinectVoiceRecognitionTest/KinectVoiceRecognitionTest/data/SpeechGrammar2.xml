<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <tag>SCREEN_OFF</tag>
        <one-of>
          <item> turn off </item>
          <item> screen off </item>
        </one-of>
      </item>
      <item>
        <tag>SELECT_PHOTOS</tag>
        <one-of>
          <item> photos </item>
          <item> show photos </item>
          <item> play photos </item>
        </one-of>
      </item>

      <item>
        <tag>DIRECTION_UP</tag>
        <one-of>
          <item> up </item>
          <item> go up </item>
          <item> scroll up </item>
        </one-of>
      </item>
      <item>
        <tag>DIRECTION_DOWN</tag>
        <one-of>
          <item> up </item>
          <item> go down </item>
          <item> scroll down </item>
        </one-of>
      </item>
      <item>
        <tag>DIRECTION_PREVIOUS</tag>
        <one-of>
          <item> previous </item>
          <item> back </item>
          <item> go back </item>
          <item> scroll back </item>
        </one-of>
      </item>

      <item>
         <tag>MEDIA_PLAY</tag>
         <one-of>
            <item> play </item>
         </one-of>
      </item>

    </one-of>
  </rule>
</grammar>
